---

<script>
  let copied = false;

  const btn = document.getElementById("email-link");

  btn?.addEventListener("click", handleCopyEmail);

  function handleCopyEmail(e: MouseEvent) {
    const target = e.currentTarget as HTMLElement | null;
    const email = target?.getAttribute("data-value");
    if (!email) return;
    navigator.clipboard.writeText(email).then(() => {
      if (target) {
        target.innerText = "Copied!";
      }
      setTimeout(() => {
        if (target) {
          target.innerText = "Email";
        }
      }, 2000);
      copied = true;
      setTimeout(() => {
        copied = false;
        // Trigger re-render
        document.dispatchEvent(new Event("astro:reload"));
      }, 2000);
      // Trigger re-render
      document.dispatchEvent(new Event("astro:reload"));
    });
  }
</script>

